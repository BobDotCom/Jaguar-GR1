<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>Arrest-Hook.ac</path>
    <animation>
     <object-name>Arrest-Handle</object-name>
   </animation>

 <animation>
  <type>material</type>
     <object-name>Arrest-Handle</object-name>
        <emission>
         <red> 1 </red>
        <green>1 </green>
       <blue>  1 </blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
   </animation>

<!-- ################################################ TailHook ###################################### -->
  <animation>
    <type>translate</type>
    <object-name>Arrest-Handle</object-name>
  <property>systems/hook/tailhook-cmd-norm</property>
      <factor>-0.05</factor>
         <axis>
          <x>1</x>
           <y>0</y>
          <z>0</z>
         </axis>
        <center>
       <x-m>-3.20650</x-m>
      <y-m>-0.32780</y-m>
     <z-m> 0.01041</z-m>
   </center>
  </animation>

<!--#################################################" MMB Adjustment ############################################" -->

    <animation>
     <type>pick</type>
        <object-name>Arrest-Handle</object-name>
      <factor> 0.05</factor>
         <action>
          <button>0</button>
            <binding>
             <command>property-toggle</command>
  <property>systems/hook/tailhook-cmd-norm</property>
               </binding>
                <binding>
                 <command>property-assign</command>
  <property>gear/tailhook-pos-norm</property>
              </binding>
             <binding>
            <command>property-toggle</command>
          <property>sim/sound/click</property>
        </binding>
      </action>
    </animation>

</PropertyList>
