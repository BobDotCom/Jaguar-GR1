<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>Throttles.ac</path>

  <animation>
    <object-name>base</object-name>
    <object-name>button</object-name>
    <object-name>throttle-L</object-name>
    <object-name>throttle-R</object-name>
		<object-name>air-brakes-ext</object-name>
        <object-name>air-brakes-in</object-name>
		<object-name>combat-slats-ext</object-name>
		<object-name>combat-slats-in</object-name>
  </animation>

        <animation>
    <type>material</type>
    <object-name>base</object-name>
    <object-name>throttle-L</object-name>
    <object-name>throttle-R</object-name>
		<object-name>air-brakes-ext</object-name>
        <object-name>air-brakes-in</object-name>
		<object-name>combat-slats-ext</object-name>
		<object-name>combat-slats-in</object-name>
    <emission>
      <factor-prop>/controls/lighting/cabin-norm</factor-prop>
            <red>0</red>
            <green>1</green>
            <blue>8</blue>
    </emission>
  </animation>

  <!-- ##############################################################Throttles ###################################################################-->
  <animation>
    <type>rotate</type>
    <object-name>throttle-L</object-name>
    <property>controls/engines/engine/throttle</property>
    <factor> -60 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>

      <center>
	<x-m>-2.99712</x-m>
	<y-m>-0.32833</y-m>
	<z-m>-0.22687</z-m>
     </center>
  </animation>

  <animation>
    <type>rotate</type>
            <object-name>throttle-R</object-name>
    		<object-name>air-brakes-ext</object-name>
            <object-name>air-brakes-in</object-name>
		<object-name>combat-slats-ext</object-name>
		<object-name>combat-slats-in</object-name>
    <object-name>throttle-R</object-name>
    <property>controls/engines/engine[1]/throttle</property>
    <factor> -60 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>

      <center>
	<x-m>-2.99711</x-m>
	<y-m>-0.28905</y-m>
	<z-m>-0.22687</z-m>
     </center>
  </animation>

<!-- #########################################################  Speed-Brakes  ############################################################################## -->
  <animation>
    <type>rotate</type>
    <object-name>air-brakes-ext</object-name>
    <object-name>air-brakes-in</object-name>
    <property>controls/flight/speedbrakes</property>
    <factor>-5 </factor>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>

      <center>
	<x-m>-2.94475</x-m>
	<y-m>-0.26868</y-m>
	<z-m>-0.15560</z-m>
     </center>

  </animation>

  <animation>
    <type>translate</type>
    <object-name>combat-slats-ext</object-name>
    <property>controls/flight/slats</property>
    <factor>0.001 </factor>
    <axis>
      <x> 0 </x>
      <y>-1 </y>
      <z> 0 </z>
    </axis>

      <center>
	<x-m>-2.95015</x-m>
	<y-m>-0.26903</y-m>
	<z-m>-0.16434</z-m>
     </center>

  </animation>

  <animation>
    <type>translate</type>
    <object-name>combat-slats-in</object-name>
    <property>controls/flight/slats</property>
    <factor>-0.001 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>

      <center>
	<x-m>-2.93772</x-m>
	<y-m>-0.26879</y-m>
	<z-m>-0.14709</z-m>
     </center>

  </animation>

  <!-- ########################################################### HotSpots  ########################################################################### -->
  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>throttle-L</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine/throttle</property>
        <step>0.2</step>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>throttle-L</object-name>
    <action>
      <button>1</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine/throttle</property>
        <step>-0.2</step>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>throttle-R</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[1]/throttle</property>
        <step>0.2</step>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>throttle-R</object-name>
    <action>
      <button>1</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[1]/throttle</property>
        <step>-0.2</step>
      </binding>
    </action>
  </animation>

    <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>air-brakes-ext</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>controls/flight/speedbrake</property>
        <step>1</step>
      </binding>
    </action>
  </animation>

    <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>air-brakes-in</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>controls/flight/speedbrake</property>
        <step>-1</step>
      </binding>
    </action>
  </animation>

    <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>combat-slats-ext</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>controls/flight/slats</property>
        <step>0.002</step>
      </binding>
    </action>
  </animation>

    <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>combat-slats-in</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/slats</property>
        <step>-1</step>
      </binding>
    </action>
  </animation>

</PropertyList>
