<?xml version="1.0" encoding="ISO-8859-1"?>

    <PropertyList>

          <path>PTR.ac</path>
    <animation>
     <object-name>PTR-Left</object-name>
     <object-name>PTR-Right</object-name>
     <object-name>PTR-nut</object-name>
     <object-name>base</object-name>
  </animation>

   <animation>
    <type>rotate</type>
    <object-name>PTR-Left</object-name>
     <property>controls/engines/engine/reheat</property>
      <factor>-60</factor>
         <axis>
          <x>-1</x>
           <y> 0</y>
          <z> 0</z>
         </axis>
     <center>
	<x-m>-2.92794</x-m>
	<y-m>-0.36042</y-m>
	<z-m>-0.07058</z-m>
     </center>
    </animation>

   <animation>
    <type>rotate</type>
    <object-name>PTR-Right</object-name>
     <property>controls/engines/engine[1]/reheat</property>
      <factor>60</factor>
         <axis>
          <x>1</x>
           <y>0</y>
          <z>0</z>
         </axis>
     <center>
	<x-m>-2.94870</x-m>
	<y-m>-0.35043</y-m>
	<z-m>-0.07058</z-m>
     </center>
    </animation>

    <animation>
     <type>pick</type>
       <object-name>PTR-Left</object-name>
        <factor>-60</factor>
         <action>
          <button>0</button>
            <binding>
             <command>property-toggle</command>
               <property>controls/engines/engine/reheat</property>
               </binding>
      </action>
    </animation>

    <animation>
     <type>pick</type>
       <object-name>PTR-Right</object-name>
        <factor>-60</factor>
         <action>
          <button>0</button>
            <binding>
             <command>property-toggle</command>
               <property>controls/engines/engine[1]/reheat</property>
               </binding>
      </action>
    </animation>

 <animation>
  <type>material</type>
     <object-name>PTR-Left</object-name>
     <object-name>PTR-Right</object-name>
     <object-name>base</object-name>
        <emission>
         <red> 1 </red>
        <green>1 </green>
       <blue>  1 </blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
   </animation>

</PropertyList>
