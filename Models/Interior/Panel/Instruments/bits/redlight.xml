<?xml version="1.0"?>
<PropertyList>

	<path>redlight.ac</path>

    <animation>
     <object-name>mount</object-name>
      <object-name>Red-Light</object-name>
      <object-name>Red-Light-on</object-name>
   </animation>

<animation>
 <type>select</type> 
 <object-name>Red-Light-on</object-name>
 <condition>	  		
    <property>controls/gear/tailhook</property>
    <value>1</value>
 </condition>
</animation>
 
	<animation>
		<type>material</type>
		<object-name>Red-Light-on</object-name>
		<emission>
			<factor-prop>controls/gear/tailhook</factor-prop>
			<red>1</red>
			 <green>1</green>
			<blue>1</blue>
		</emission>
	</animation>

</PropertyList>
