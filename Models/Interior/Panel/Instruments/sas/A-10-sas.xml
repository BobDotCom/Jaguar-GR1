	<animation>
		<object-name>yaw-trim-knob</object-name>
		<type>rotate</type>
		<property>fdm/jsbsim/sas/yaw-trim</property>
		<factor>60</factor>
		<center>
			<x-m> 0.01990</x-m>
			<y-m>-0.03532</y-m>
			<z-m> 0.00082</z-m>
		</center>
		<axis>
			<x> 0</x>
			<y> 0</y>
			<z> 1</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
          <visible>false</visible>
		<object-name>YT-L</object-name>
		<factor>-30</factor>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>fdm/jsbsim/sas/yaw-trim</property>
				<step>-0.05</step>
                        <min>0</min>
                        <max>1</max>
                        <factor>0.04</factor>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
