<?xml version="1.0"?>


<PropertyList>

	<path>A-10-sas.ac</path>
	
	<!-- Yaw SAS switch -->
	<animation>
		<object-name>yaw-L-switch</object-name>
		<type>rotate</type>
		<property>fdm/jsbsim/sas/yaw-l</property>
		<factor>-60</factor>
		<axis>
			<object-name>yaw-L-switch-axis</object-name>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>yaw-L-switch</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>fdm/jsbsim/sas/yaw-l</property>
			</binding>
		</action>
	</animation>

