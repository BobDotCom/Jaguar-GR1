	<animation>
		<type>knob</type>
		<object-name>yaw-trim-knob</object-name>
		<property>fdm/jsbsim/sas/yaw-trim</property>
		<factor>-135</factor>
		<axis>
		  <object-name>yaw-trim-knob-axis</object-name>
		</axis>
		
		<action>
			<binding>
				<command>property-adjust</command>
				<property>fdm/jsbsim/sas/yaw-trim</property>
  
				<factor>0.1</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>		
	  </animation>

	

