<?xml version="1.0" encoding="iso-8859-1"?>
<PropertyList>
    
  <model>
    <name>magic2-100</name>
    <path>magic-2.xml</path>
  </model>
    
  <animation>
    <object-name>magic2-100</object-name>
    <enable-hot type="bool">false</enable-hot>
  </animation>
  <animation>
    <type>select</type>
    <object-name>magic2-100</object-name>
    <condition>
        <property>payload/armament/magic-2/flags/msl-id-0</property>
    </condition>
  </animation>
  
  
  <model>
		<name>flaminghot</name>
		<path>combustion.xml</path>
		<offsets>
			<x-m>1.62</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</offsets>
	</model>
	
	<animation>
      <type>select</type>
      <object-name>flaminghot</object-name>
      <condition>
           <property>payload/armament/magic-2/flags/smoke-id-0</property>
     </condition>
  </animation>
  
  <animation>
      <type>scale</type>
      <object-name>flaminghot</object-name>
      <x-offset>1.0</x-offset>
      <y-offset>0.15</y-offset>
      <z-offset>0.15</z-offset>
  </animation>
  
  
  <model>
    <name>Smoke_magic2-100</name>
    <path>smoke.xml</path>
    <offsets>
      <x-m>3</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>
  </model>
  <animation>
    <type>select</type>
    <object-name>Smoke_magic2-100</object-name>
    <condition>
        <property>payload/armament/magic-2/flags/smoke-id-0</property>
    </condition>
  </animation>
  
  <model>
    <name>explosionFire_magic-2-100</name>
    <path>explosionFire.xml</path>
  </model>
  <model>
    <name>explosionSmoke_magic-2-100</name>
    <path>explosionSmoke.xml</path>
  </model>
  
    <animation>
    <type>select</type>
    <object-name>explosionFire_magic-2-100</object-name>
    <object-name>explosionSmoke_magic-2-100</object-name>
    <condition>
        <property>payload/armament/magic-2/flags/explode-id-0</property>
    </condition>
  </animation>
  

</PropertyList>
